{
  "name": "@bodrick/vscode-plugins-monorepo",
  "private": true,
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "check:format": "prettier --list-different \"./**/*.{ts,js,json,md}\"",
    "check:spelling": "cspell --config=.cspell.json \"**/*.{md,ts,js}\"",
    "check:styles": "stylelint \"**/*.{css,scss}\"",
    "clean": "rimraf \"packages/**/{temp,dist}\"",
    "format": "prettier --write \"**/*.{js,json,md,yml,css,ts}\"",
    "format:styles": "stylelint \"**/*.{css,scss}\"  --fix",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "eslint \"**/*.{js,jsx,ts,tsx}\" --fix",
    "postinstall": "node scripts/install-husky.js",
    "pre-commit": "lint-staged",
    "pre-push": "pnpm run check:format",
    "preinstall": "node scripts/disallow-npm.js",
    "publish": "node scripts/publish.js",
    "security": "pnpm audit --audit-level=moderate"
  },
  "dependencies": {
    "conventional-commits-parser": "^3.2.1",
    "semver": "^7.3.5",
    "tslib": "^2.2.0",
    "write-pkg": "^4.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.16.0",
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@bodrick/eslint-config": "^0.9.3",
    "@rollup/plugin-image": "^2.0.6",
    "@rushstack/eslint-patch": "^1.0.6",
    "@types/jest": "^26.0.23",
    "@types/micromatch": "^4.0.1",
    "@types/minimist": "^1.2.1",
    "@types/node": "^15.0.1",
    "@types/rimraf": "^3.0.0",
    "@types/yargs": "^16.0.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "@wessberg/rollup-plugin-ts": "^1.3.14",
    "autoprefixer": "^10.2.5",
    "ci-info": "^3.1.1",
    "cosmiconfig": "^7.0.0",
    "cross-env": "^7.0.3",
    "cspell": "^5.3.12",
    "date-fns": "^2.21.1",
    "eslint": "^7.25.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-import-resolver-typescript": "^2.4.0",
    "execa": "^5.0.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "micromatch": "^4.0.4",
    "minimist": "^1.2.5",
    "postcss": "8.2.13",
    "prettier": "^2.2.1",
    "prettier-plugin-package": "^1.3.0",
    "read-pkg": "^6.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.46.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-sass": "^1.2.2",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.32.12",
    "shx": "^0.3.3",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-prettier": "^1.2.0",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,yml,yaml,md}": "prettier --write"
  }
}
